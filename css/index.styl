*
  margin 0px
  padding 0px
  border 0px
  text-decoration none
  font-family "Helvetica", sans-serif

html, body
  width 100%
  height 100%

#todo
  margin 50px auto
  text-align center
  width 600px
  height auto
  min-height auto
  padding 4`0px 100px
  background-color #ecefef
  p
    text-align left
    font-size 13pt
  a
    color #993333
  ul
    margin-left 50px
  li
    list-style none
    background-image url('../images/bullet.svg') 
    background-position -150px 0px
    background-repeat no-repeat
    background-size 60% 60%
    margin-bottom 5px
    padding-left 60px
    padding-bottom 10px
    height 20px
    a 
     color #993333

.stripe
  position absolute
  left 0px
  padding 30px 0px
  width 100%
  background-color #333366
  p
    font-family: 'Economica' sans-serif
    margin 10px auto
    color white
    width 350px
    font-weight 200
    line-height 15pt
    font-size 18px
.content
  width 600px
  height auto
  position relative
  margin 200px auto 0px auto
strong
  font-variant small-caps
  font-size 18pt
  color white

#links
  width 120px
  margin 10px auto
  padding 10px 0px 0px 0px
  position relative
  height 120px
.link
  height 120px
  width 140px
  background-size 90px 90px
  background-repeat no-repeat
  background-position 10% 10%
  padding 0px 0px
  margin 0px 10px
  float left
  display inline-block
.link:hover
  border-bottom solid thick white
  fill white
#github
  padding-left 0px
  margin-left 20px
  background-image url('../images/blacktocat.svg')
#email
  background-image url('../images/email.svg')
#resume
  background-image url('../images/resume.svg')
  padding-right 0px
  margin-right 0px

h1
  font-family 'Adamina', serif
  color #333366
  font-variant small-caps
